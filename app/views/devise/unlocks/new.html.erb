<section>
  <div class="container">
    <div class="padding_inner">
      <h1>Resend unlock instructions</h1>
      <div class="login_div text-center change_password">
      	<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>

      		<div class="error_msg"><%= devise_error_messages! %></div>
      		<div class="form-group"> 
            	<%= f.email_field :email, autofocus: true, :class =>"form-control", :placeholder =>"Email" %>
          	</div>
    		<%= f.submit "Resend unlock instructions", :class =>"btn btn-success" %>
      <% end %>
      <div class="text-center forgot_pass"><%= render "devise/shared/links" %></div> 
      </div>
    </div>
  </div>
</section>