									      	<td>
										    	<%history.original.each do |k,v| if check_version_field(k)%>
										      		<%= t("epsadmin_merchants.#{k.to_s}")%> : <%= v.to_s %> <br>
										      	<% end 
									      		end %>
									      	</td>
									    	<td>
										    	<%history.modified.each do |k,v|
										    		if check_version_field(k) %>
										      		<%= t("epsadmin_merchants.#{k.to_s}")%> : <%= v.to_s %> <br>
									      		<% end 
									      		end %>
								      		</td>
