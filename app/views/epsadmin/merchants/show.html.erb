					<div class="merchant_table table-responsive">
						<table id="history_table" class="display table text-left merchant_history">
							<thead>
								<tr>
								    <th>Version No</th>
								    <th>Updated At</th>
								    <th>Original</th>
								    <th>Modified</th>
								    <th>Modifier Name</th>
								</tr>
						    </thead>
